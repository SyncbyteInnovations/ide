<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/user_manage_info" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_remarks"
            android:drawablePadding="10dp"
            android:hint="@string/username_register"
            android:inputType="text"
            android:maxLength="150"
            android:textSize="15sp"
            android:theme="@style/et_black" />

        <EditText
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_remarks"
            android:drawablePadding="10dp"
            android:hint="@string/username_id"
            android:inputType="text"
            android:maxLength="150"
            android:textSize="15sp"
            android:theme="@style/et_black" />


        <Button
            android:id="@+id/btn_register_user"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/et_round_btn"
            android:text="@string/register_user"
            android:textColor="@color/dark_gray" />


    </LinearLayout>
</androidx.cardview.widget.CardView>