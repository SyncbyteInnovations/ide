<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_leave_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/leave_duration_label"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_leave_type"
            android:layout_alignParentStart="true"
            android:text="@string/duration"
            android:textColor="@color/light_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_leave_duration"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@id/tv_leave_type"
            android:layout_toEndOf="@id/leave_duration_label"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:id="@+id/leave_status_label"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_leave_type"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tv_leave_duration"
            android:text="@string/status"
            android:textColor="@color/light_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_leave_status"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/leave_status_label"
            android:layout_below="@id/tv_leave_type"
            android:layout_centerInParent="true"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:id="@+id/sanction_by_label"
            android:layout_width="90dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/leave_duration_label"
            android:text="@string/sanctioner"
            android:textColor="@color/light_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_sanctioned_by"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/leave_duration_label"
            android:layout_toEndOf="@id/sanction_by_label"
            android:textColor="@color/dark_gray"/>


        <TextView
            android:id="@+id/authorise_by_label"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/leave_duration_label"
            android:text="@string/authoriser"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tv_sanctioned_by"
            android:textColor="@color/light_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_authorised_by"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/leave_duration_label"
            android:layout_toEndOf="@id/authorise_by_label"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_authorised_by"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_clock"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>